{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "max-len": ["error", 300],
        "linebreak-style": "off",
        "no-param-reassign": "off",
        "no-restricted-syntax": "off",
        "import/no-dynamic-require": "off",
        "global-require": "off",
        "consistent-return": "off"
    }
}
